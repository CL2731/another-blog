<main class="form-signin text-center">
  <form id="login-form">
    <h1 class="text-light">Login</h1>

    <div class="form-floating">
      <input type="text" class="form-control" id="username-login" placeholder="User07" autofocus="true">
      <label for="username-login">Username</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="password-login" placeholder="JimmyJoe" autofocus="true">
      <label for="password-login">Password</label>
    </div>

    <button class="btn" style="background-color:#2b52a7;" type="submit">Sign in</button>
    <a class="login-link text-light" href="/signup">Sign up now</a>
  </form>
</main>

<script src="/js/login.js"></script>